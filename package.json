{
  "name": "@react-cmpt/hooks",
  "version": "0.7.1",
  "description": "Some react hooks",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "esm/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf ./lib/* ./esm/* && yarn build:cjs && yarn build:es",
    "build:cjs": "tsc",
    "build:es": "tsc -p ./tsconfig.es.json",
    "test": "jest -c jest.json",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*' --config ./.prettierrc",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "prepare": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-cmpt/hooks.git"
  },
  "keywords": [
    "react",
    "hooks",
    "react-hooks"
  ],
  "author": "wangcch <wangcch.cc@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@react-cmpt/use-throttle": "^0.3.3",
    "fast-deep-equal": "^3.1.3",
    "use-debounce": "^7.0.1"
  },
  "peerDependencies": {
    "react": ">16.8.0",
    "react-dom": ">16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "^27.4.5",
    "lint-staged": "^10.4.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  }
}
